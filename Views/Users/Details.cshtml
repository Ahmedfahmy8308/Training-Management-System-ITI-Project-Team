@using Training_Management_System_ITI_Project.enums
@model Training_Management_System_ITI_Project.Models.ApplicationUser

@{
  ViewData["Title"] = "User Details";
}

<h2>User Details</h2>

<div>
  <hr />
  <dl class="row">
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.FullName)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.FullName)
    </dd>
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Email)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Email)
    </dd>
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Role)
    </dt>
    <dd class="col-sm-10">
      <span class="badge badge-@(Model.Role == UserRole.Admin ? "danger" : 
                                                   Model.Role == UserRole.Instructor ? "primary" : "success")">
        @Html.DisplayFor(model => model.Role)
      </span>
    </dd>
  </dl>
</div>
<div>
  <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
  @if (Model.Role == UserRole.Trainee)
  {
    <a asp-controller="Grades" asp-action="TraineeGrades" asp-route-id="@Model.Id" class="btn btn-info">View Grades</a>
  }
  <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
