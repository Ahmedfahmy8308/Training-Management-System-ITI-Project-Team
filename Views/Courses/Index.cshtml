@model Training_Management_System_ITI_Project.ViewModels.CourseSearchViewModel

@{
    ViewData["Title"] = "Courses";
}

<div class="d-flex justify-content-between align-items-center mb-4 animate-fade-in-up">
    <div>
        <h1 class="display-6 fw-bold text-gradient-primary">
            <i class="fas fa-book me-2"></i>Courses Management
        </h1>
        <p class="text-muted mb-0">Manage and organize your training courses</p>
    </div>
    <div>
        @if (User.IsInRole("Instructor") || User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
        {
            <a asp-action="Create" class="btn btn-gradient-primary shadow-enhanced">
                <i class="fas fa-plus me-2"></i>Create New Course
            </a>
        }
    </div>
</div>

<!-- Search Section -->
<div class="card card-enhanced mb-4 animate-fade-in-up">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-search me-2"></i>Search Courses
        </h5>
    </div>
    <div class="card-body">
        <form asp-action="Index" method="get" class="form-enhanced">
            <div class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" name="searchTerm" value="@Model.SearchTerm" 
                               class="form-control" placeholder="Search by course name or category..." />
                        <button class="btn btn-gradient-primary" type="submit">
                            <i class="fas fa-search me-1"></i>Search
                        </button>
                    </div>
                </div>
                <div class="col-md-4">
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-times me-1"></i>Clear Filter
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Courses Table -->
<div class="card card-enhanced animate-fade-in-up">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="fas fa-list me-2"></i>All Courses (@Model.Courses.Count())
        </h5>
        @if (!string.IsNullOrEmpty(Model.SearchTerm))
        {
            <span class="badge bg-info">
                <i class="fas fa-filter me-1"></i>Filtered by: "@Model.SearchTerm"
            </span>
        }
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-enhanced mb-0">
                <thead>
                    <tr>
                        <th><i class="fas fa-book me-1"></i>Course Name</th>
                        <th><i class="fas fa-tag me-1"></i>Category</th>
                        <th><i class="fas fa-user-tie me-1"></i>Instructor</th>
                        <th class="text-center"><i class="fas fa-cogs me-1"></i>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Courses.Any())
                    {
                        @foreach (var item in Model.Courses)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="me-3">
                                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" 
                                                 style="width: 40px; height: 40px;">
                                                <i class="fas fa-book"></i>
                                            </div>
                                        </div>
                                        <div>
                                            <h6 class="mb-0 fw-bold">@Html.DisplayFor(modelItem => item.Name)</h6>
                                            <small class="text-muted">Course ID: @item.Id</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark border">
                                        @Html.DisplayFor(modelItem => item.Category)
                                    </span>
                                </td>
                                <td>
                                    @if (item.Instructor != null)
                                    {
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-user-circle text-primary me-2"></i>
                                            <span>@item.Instructor.FullName</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">
                                            <i class="fas fa-user-slash me-1"></i>Not Assigned
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" 
                                           class="btn btn-outline-info btn-sm" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (User.IsInRole("Instructor") || User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" 
                                               class="btn btn-outline-warning btn-sm" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                        @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                                        {
                                            <a asp-action="Delete" asp-route-id="@item.Id" 
                                               class="btn btn-outline-danger btn-sm" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5">
                                <div class="text-muted">
                                    <i class="fas fa-search fa-3x mb-3"></i>
                                    <h5>No courses found</h5>
                                    <p>@if (!string.IsNullOrEmpty(Model.SearchTerm))
                                        {
                                            <span>No courses match your search criteria. Try adjusting your search term.</span>
                                        }
                                        else
                                        {
                                            <span>No courses available. Create your first course to get started.</span>
                                        }
                                    </p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@if (!Model.Courses.Any())
{
    <div class="alert alert-info">
        <h4>No courses found</h4>
        <p>@(string.IsNullOrEmpty(Model.SearchTerm) ? "No courses have been created yet." : $"No courses match your search for '{Model.SearchTerm}'.")</p>
    </div>
}
