@{
  ViewData["Title"] = "Training Management System";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<section class="hero-section text-white py-5">
  <div class="container">
    <div class="row align-items-center min-vh-75">
      <div class="col-lg-8 mx-auto text-center animate-fade-in-up">
        <div class="mb-4">
          <span class="badge bg-warning text-dark px-3 py-2 rounded-pill fs-6 fw-semibold mb-3 d-inline-block">
            <i class="fas fa-graduation-cap me-2"></i>Education Platform
          </span>
        </div>

        <h1 class="display-2 fw-bold mb-4 lh-1">
          <span class="text-gradient-primary">Training Management</span><br>
        </h1>

        <p class="lead mb-5 text-light fs-4 mx-auto" style="max-width: 600px;">
          Streamline your educational workflow with our comprehensive platform for managing courses, sessions, and
          student progress.
        </p>

        <div class="d-flex gap-3 justify-content-center flex-wrap">
          <a href="@Url.Action("RegisterStudent", "Account")"
            class="btn btn-gradient-success btn-lg px-4 py-3 rounded-pill shadow-lg">
            <i class="fas fa-rocket me-2"></i>Get Started
          </a>
          <a href="@Url.Action("Login", "Account")" class="btn btn-outline-light btn-lg px-4 py-3 rounded-pill">
            <i class="fas fa-sign-in-alt me-2"></i>Staff Login
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="features-section py-5 bg-gradient-light">
  <div class="container">
    <div class="text-center mb-5 animate-fade-in-up">
      <h2 class="display-5 fw-bold text-gradient-primary">Platform Features</h2>
      <p class="lead text-muted">Powerful tools for modern training management </p>
    </div>

    <div class="row g-4">
      <div class="col-md-6 col-lg-3 animate-fade-in-up">
        <div class="card card-enhanced h-100 border-0">
          <div class="card-body text-center">
            <div class="feature-icon mx-auto mb-3">
              <i class="fas fa-book"></i>
            </div>
            <h5 class="card-title fw-bold">Course Management</h5>
            <p class="card-text text-muted">
              Create and organize courses by category. Assign instructors and track course progress.
            </p>
          </div>
        </div>
      </div>

      <div class="col-md-6 col-lg-3">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body text-center">
            <div class="feature-icon bg-success text-white rounded-circle mx-auto mb-3">
              <i class="fas fa-calendar-alt fa-2x"></i>
            </div>
            <h5 class="card-title">Session Scheduling</h5>
            <p class="card-text text-muted">
              Schedule and manage training sessions with date validation and conflict detection.
            </p>
          </div>
        </div>
      </div>

      <div class="col-md-6 col-lg-3">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body text-center">
            <div class="feature-icon bg-info text-white rounded-circle mx-auto mb-3">
              <i class="fas fa-chart-line fa-2x"></i>
            </div>
            <h5 class="card-title">Grade Tracking</h5>
            <p class="card-text text-muted">
              Record and monitor student grades with automated calculations and progress reports.
            </p>
          </div>
        </div>
      </div>

      <div class="col-md-6 col-lg-3">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body text-center">
            <div class="feature-icon bg-warning text-white rounded-circle mx-auto mb-3">
              <i class="fas fa-users fa-2x"></i>
            </div>
            <h5 class="card-title">User Management</h5>
            <p class="card-text text-muted">
              Role-based access control for administrators, instructors, and students.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Statistics Section -->
<section class="stats-section bg-light py-5">
  <div class="container">
    <div class="text-center mb-5">
      <h2 class="display-5 fw-bold">Platform Statistics</h2>
      <p class="lead text-muted">Real-time insights into system usage</p>
    </div>

    <div class="row g-4">
      <div class="col-md-3 col-sm-6">
        <div class="text-center">
          <div class="stat-icon bg-primary text-white rounded-circle mx-auto mb-3">
            <i class="fas fa-book fa-2x"></i>
          </div>
          <h3 class="fw-bold text-primary">50+</h3>
          <p class="text-muted">Courses Available</p>
        </div>
      </div>

      <div class="col-md-3 col-sm-6">
        <div class="text-center">
          <div class="stat-icon bg-success text-white rounded-circle mx-auto mb-3">
            <i class="fas fa-graduation-cap fa-2x"></i>
          </div>
          <h3 class="fw-bold text-success">500+</h3>
          <p class="text-muted">Students Enrolled</p>
        </div>
      </div>

      <div class="col-md-3 col-sm-6">
        <div class="text-center">
          <div class="stat-icon bg-info text-white rounded-circle mx-auto mb-3">
            <i class="fas fa-chalkboard-teacher fa-2x"></i>
          </div>
          <h3 class="fw-bold text-info">25+</h3>
          <p class="text-muted">Expert Instructors</p>
        </div>
      </div>

      <div class="col-md-3 col-sm-6">
        <div class="text-center">
          <div class="stat-icon bg-warning text-white rounded-circle mx-auto mb-3">
            <i class="fas fa-calendar-check fa-2x"></i>
          </div>
          <h3 class="fw-bold text-warning">1000+</h3>
          <p class="text-muted">Sessions Completed</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- How It Works Section -->
<section class="how-it-works-section py-5">
  <div class="container">
    <div class="text-center mb-5">
      <h2 class="display-5 fw-bold">How It Works</h2>
      <p class="lead text-muted">Simple steps to get started</p>
    </div>

    <div class="row g-4">
      <div class="col-lg-4">
        <div class="text-center">
          <div class="step-number bg-primary text-white rounded-circle mx-auto mb-3">1</div>
          <h5 class="fw-bold">Register Account</h5>
          <p class="text-muted">
            Create your student account to access courses and track your learning progress.
          </p>
        </div>
      </div>

      <div class="col-lg-4">
        <div class="text-center">
          <div class="step-number bg-success text-white rounded-circle mx-auto mb-3">2</div>
          <h5 class="fw-bold">Enroll in Courses</h5>
          <p class="text-muted">
            Browse available courses and enroll in sessions that match your learning goals.
          </p>
        </div>
      </div>

      <div class="col-lg-4">
        <div class="text-center">
          <div class="step-number bg-info text-white rounded-circle mx-auto mb-3">3</div>
          <h5 class="fw-bold">Track Progress</h5>
          <p class="text-muted">
            Monitor your grades, attendance, and overall progress throughout your training.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Call to Action Section -->
<section class="cta-section bg-dark text-white py-5">
  <div class="container text-center">
    <h2 class="display-5 fw-bold mb-4">Ready to Start Learning?</h2>
    <p class="lead mb-4">
      Join thousands of students who are advancing their skills with our training management platform.
    </p>
    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
      <a href="@Url.Action("RegisterStudent", "Account")" class="btn btn-primary btn-lg me-md-2">
        <i class="fas fa-rocket me-2"></i>Get Started Now
      </a>
      <a href="@Url.Action("Login", "Account")" class="btn btn-outline-light btn-lg">
        <i class="fas fa-info-circle me-2"></i>Learn More
      </a>
    </div>
  </div>
</section>

<style>
  .hero-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 70vh;
    display: flex;
    align-items: center;
  }

  .feature-icon,
  .stat-icon {
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .step-number {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: bold;
  }

  .card {
    transition: transform 0.3s ease-in-out;
  }

  .card:hover {
    transform: translateY(-5px);
  }

  .cta-section {
    background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);
  }
</style>
