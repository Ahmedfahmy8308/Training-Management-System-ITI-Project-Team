@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1 class="display-4">Training Management System</h1>
    <p class="lead">Welcome to the comprehensive training management platform</p>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="text-xs font-weight-bold text-uppercase mb-1">Total Courses</div>
                        <div class="h5 mb-0 font-weight-bold">@ViewBag.TotalCourses</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-book fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a asp-controller="Courses" asp-action="Index" class="text-white text-decoration-none">
                    View Details <i class="fas fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="text-xs font-weight-bold text-uppercase mb-1">Total Sessions</div>
                        <div class="h5 mb-0 font-weight-bold">@ViewBag.TotalSessions</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a asp-controller="Sessions" asp-action="Index" class="text-white text-decoration-none">
                    View Details <i class="fas fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-info text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="text-xs font-weight-bold text-uppercase mb-1">Total Users</div>
                        <div class="h5 mb-0 font-weight-bold">@ViewBag.TotalUsers</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a asp-controller="Users" asp-action="Index" class="text-white text-decoration-none">
                    View Details <i class="fas fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-warning text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="text-xs font-weight-bold text-uppercase mb-1">Total Grades</div>
                        <div class="h5 mb-0 font-weight-bold">@ViewBag.TotalGrades</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-chart-bar fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a asp-controller="Grades" asp-action="Index" class="text-white text-decoration-none">
                    View Details <i class="fas fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <a asp-controller="Courses" asp-action="Create" class="btn btn-primary btn-block mb-2">
                            <i class="fas fa-plus"></i> Add New Course
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Sessions" asp-action="Create" class="btn btn-success btn-block mb-2">
                            <i class="fas fa-plus"></i> Add New Session
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Users" asp-action="Create" class="btn btn-info btn-block mb-2">
                            <i class="fas fa-plus"></i> Add New User
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Grades" asp-action="Create" class="btn btn-warning btn-block mb-2">
                            <i class="fas fa-plus"></i> Record Grade
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
