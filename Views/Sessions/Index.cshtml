@model Training_Management_System_ITI_Project.ViewModels.SessionSearchViewModel

@{
    ViewData["Title"] = "Sessions";
}

<h2>Sessions Management</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Session</a>
</p>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" name="courseNameSearch" value="@Model.CourseNameSearch" class="form-control" placeholder="Search by course name..." />
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit">Search</button>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <a asp-action="Index" class="btn btn-secondary">Clear</a>
        </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Course</th>
                <th>Instructor</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Sessions)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Course.Name)</td>
                    <td>@(item.Course.Instructor?.FullName ?? "Not Assigned")</td>
                    <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Sessions.Any())
{
    <div class="alert alert-info">
        <h4>No sessions found</h4>
        <p>@(string.IsNullOrEmpty(Model.CourseNameSearch) ? "No sessions have been created yet." : $"No sessions match your search for '{Model.CourseNameSearch}'.")</p>
    </div>
}
