<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description"
    content="Comprehensive training management platform for educational institutions. Manage courses, track sessions, record grades, and monitor student progress.">
  <meta name="keywords"
    content="training management, education, courses, sessions, grades, students, learning management system">
  <meta name="author" content="Training Management System ITI Project">

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:title" content="@ViewData["Title"] - Training Management System">
  <meta property="og:description" content="Comprehensive training management platform for educational institutions">
  <meta property="og:site_name" content="Training Management System">

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:title" content="@ViewData["Title"] - Training Management System">
  <meta property="twitter:description"
    content="Comprehensive training management platform for educational institutions">

  <title>@ViewData["Title"] - Training Management System</title>

  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="~/favicon.ico">

  <!-- CSS Dependencies -->
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/Training_Management_System_ITI_Project.styles.css" asp-append-version="true" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- Preload important resources -->
  <link rel="preload" href="~/css/site.css" as="style">
  <link rel="preload" href="~/js/site.js" as="script">
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark navbar-enhanced border-bottom box-shadow mb-3">
      <div class="container-fluid">
        <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
          <i class="fas fa-graduation-cap me-2"></i>Training Management System
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
          @if (User.Identity?.IsAuthenticated == true)
          {
            <ul class="navbar-nav flex-grow-1">
              <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">
                  <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-controller="Courses" asp-action="Index">
                  <i class="fas fa-book me-1"></i>Courses
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-controller="Sessions" asp-action="Index">
                  <i class="fas fa-calendar-alt me-1"></i>Sessions
                </a>
              </li>
              @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
              {
                <li class="nav-item">
                  <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="ManageUsers">
                    <i class="fas fa-users me-1"></i>Users
                  </a>
                </li>
              }
              <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-controller="Grades" asp-action="Index">
                  <i class="fas fa-chart-line me-1"></i>Grades
                </a>
              </li>
            </ul>

            <!-- User Profile Dropdown -->
            <ul class="navbar-nav">
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button"
                  data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="fas fa-user-circle me-1"></i>
                  @(User.Identity?.Name ?? "User")
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                  <li>
                    <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                      <i class="fas fa-user me-2"></i>My Profile
                    </a>
                  </li>
                  <li>
                    <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                      <i class="fas fa-key me-2"></i>Change Password
                    </a>
                  </li>
                  @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                  {
                    <li>
                      <hr class="dropdown-divider">
                    </li>
                    <li>
                      <a class="dropdown-item" asp-controller="Account" asp-action="ManageUsers">
                        <i class="fas fa-users-cog me-2"></i>Manage Users
                      </a>
                    </li>
                    <li>
                      <a class="dropdown-item" asp-controller="Account" asp-action="Register">
                        <i class="fas fa-user-plus me-2"></i>Add User
                      </a>
                    </li>
                  }
                  <li>
                    <hr class="dropdown-divider">
                  </li>
                  <li>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                      <button type="submit" class="dropdown-item text-danger">
                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                      </button>
                    </form>
                  </li>
                </ul>
              </li>
            </ul>
          }
          else
          {
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a class="nav-link text-light" asp-controller="Account" asp-action="Login">
                  <i class="fas fa-sign-in-alt me-1"></i>Login
                </a>
              </li>
            </ul>
          }
        </div>
      </div>
    </nav>
  </header>

  <div class="container">
    <main role="main" class="pb-3">
      @if (TempData["SuccessMessage"] != null)
      {
        <div class="alert alert-success alert-enhanced alert-dismissible fade show animate-fade-in-up" role="alert">
          <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      }
      @if (TempData["ErrorMessage"] != null)
      {
        <div class="alert alert-danger alert-enhanced alert-dismissible fade show animate-fade-in-up" role="alert">
          <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      }
      @RenderBody()
    </main>
  </div>

  <footer class="bg-dark text-white mt-5">
    <div class="container py-5">
      <div class="row">
        <div class="col-lg-4 col-md-6 mb-4">
          <h5 class="text-primary mb-3">
            <i class="fas fa-graduation-cap me-2"></i>Training Management System
          </h5>
          <p class="text-light-gray">
            Empowering education through comprehensive training management.
            Streamline your courses, sessions, and student progress all in one platform.
          </p>
          <div class="mb-3">
            <h6 class="text-warning mb-2">System Stats</h6>
            <div class="row text-center">
              <div class="col-4">
                <div class="footer-stat">
                  <strong class="text-primary d-block">500+</strong>
                  <small class="text-white-50">Students</small>
                </div>
              </div>
              <div class="col-4">
                <div class="footer-stat">
                  <strong class="text-success d-block">50+</strong>
                  <small class="text-white-50">Courses</small>
                </div>
              </div>
              <div class="col-4">
                <div class="footer-stat">
                  <strong class="text-warning d-block">25+</strong>
                  <small class="text-white-50">Instructors</small>
                </div>
              </div>
            </div>
          </div>
          <div class="social-links">
            <a href="https://facebook.com" class="text-white me-3" title="Facebook" target="_blank">
              <i class="fab fa-facebook-f"></i>
            </a>
            <a href="https://twitter.com" class="text-white me-3" title="Twitter" target="_blank">
              <i class="fab fa-twitter"></i>
            </a>
            <a href="https://linkedin.com" class="text-white me-3" title="LinkedIn" target="_blank">
              <i class="fab fa-linkedin-in"></i>
            </a>
            <a href="https://github.com" class="text-white" title="GitHub" target="_blank">
              <i class="fab fa-github"></i>
            </a>
          </div>
        </div>
        <div class="col-lg-2 col-md-6 mb-4">
          <h6 class="text-uppercase fw-bold mb-3">Quick Links</h6>
          <ul class="list-unstyled">
            @if (User.Identity?.IsAuthenticated == true)
            {
              <li class="mb-2">
                <a href="@Url.Action("Index", "Home")" class="text-white-50 text-decoration-none footer-link">
                  <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                </a>
              </li>
              <li class="mb-2">
                <a href="@Url.Action("Index", "Courses")" class="text-white-50 text-decoration-none footer-link">
                  <i class="fas fa-book me-1"></i>Courses
                </a>
              </li>
              <li class="mb-2">
                <a href="@Url.Action("Index", "Sessions")" class="text-white-50 text-decoration-none footer-link">
                  <i class="fas fa-calendar-alt me-1"></i>Sessions
                </a>
              </li>
              <li class="mb-2">
                <a href="@Url.Action("Index", "Grades")" class="text-white-50 text-decoration-none footer-link">
                  <i class="fas fa-chart-line me-1"></i>Grades
                </a>
              </li>
            }
            else
            {
              <li class="mb-2">
                <a href="@Url.Action("Index", "Home")" class="text-white-50 text-decoration-none footer-link">
                  <i class="fas fa-home me-1"></i>Home
                </a>
              </li>
              <li class="mb-2">
                <a href="@Url.Action("RegisterStudent", "Account")"
                  class="text-white-50 text-decoration-none footer-link">
                  <i class="fas fa-user-plus me-1"></i>Register
                </a>
              </li>
              <li class="mb-2">
                <a href="@Url.Action("Login", "Account")" class="text-white-50 text-decoration-none footer-link">
                  <i class="fas fa-sign-in-alt me-1"></i>Login
                </a>
              </li>
              <li class="mb-2">
                <a href="#about-section" class="text-white-50 text-decoration-none footer-link">
                  <i class="fas fa-info-circle me-1"></i>About Us
                </a>
              </li>
            }
          </ul>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
          <h6 class="text-uppercase fw-bold mb-3">Platform Features</h6>
          <ul class="list-unstyled">
            <li class="mb-2">
              <span class="text-white-50">
                <i class="fas fa-check text-success me-2"></i>Course Management
              </span>
            </li>
            <li class="mb-2">
              <span class="text-white-50">
                <i class="fas fa-check text-success me-2"></i>Session Scheduling
              </span>
            </li>
            <li class="mb-2">
              <span class="text-white-50">
                <i class="fas fa-check text-success me-2"></i>Grade Tracking
              </span>
            </li>
            <li class="mb-2">
              <span class="text-white-50">
                <i class="fas fa-check text-success me-2"></i>User Management
              </span>
            </li>
            <li class="mb-2">
              <span class="text-white-50">
                <i class="fas fa-check text-success me-2"></i>Progress Reports
              </span>
            </li>
            <li class="mb-2">
              <span class="text-white-50">
                <i class="fas fa-check text-success me-2"></i>Real-time Analytics
              </span>
            </li>
            <li class="mb-2">
              <span class="text-white-50">
                <i class="fas fa-check text-success me-2"></i>Mobile Responsive
              </span>
            </li>
          </ul>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
          <h6 class="text-uppercase fw-bold mb-3">Contact & Support</h6>
          <ul class="list-unstyled">
            <li class="mb-2">
              <span class="text-white-50">
                <i class="fas fa-map-marker-alt text-primary me-2"></i>
                ITI Smart Village, Cairo, Egypt
              </span>
            </li>
            <li class="mb-2">
              <span class="text-white-50">
                <i class="fas fa-phone text-primary me-2"></i>
                +20 (101) 520-5654
              </span>
            </li>
            <li class="mb-2">
              <span class="text-white-50">
                <i class="fas fa-envelope text-primary me-2"></i>
                support@iti-training.edu.eg
              </span>
            </li>
            <li class="mb-2">
              <span class="text-white-50">
                <i class="fas fa-clock text-primary me-2"></i>
                24/7 Online Support
              </span>
            </li>
            <li class="mb-2">
              <span class="text-white-50">
                <i class="fas fa-graduation-cap text-primary me-2"></i>
                Established: 2025
              </span>
            </li>
            <li class="mb-2">
              <span class="text-white-50">
                <i class="fas fa-award text-primary me-2"></i>
                ISO 9001:2015 Certified
              </span>
            </li>
          </ul>
        </div>
      </div>

      <hr class="my-4 border-secondary">
      <div class="footer-bottom">
        <div class="row align-items-center justify-content-between">
          <div class="col-lg-4 col-md-6 mb-2 mb-md-0">
            <p class="text-white-50 mb-0 footer-copyright">
              <i class="fas fa-copyright me-1"></i>
              @DateTime.Now.Year Training Management System . All rights reserved.
            </p>
          </div>
          <div class="col-lg-4 col-md-6 mb-2 mb-md-0 text-center">
            <div class="footer-links">
              <a asp-controller="Home" asp-action="Privacy"
                class="text-white-50 text-decoration-none footer-link me-3 hover-primary">
                <i class="fas fa-shield-alt me-1"></i>Privacy Policy
              </a>
              <a href="#" class="text-white-50 text-decoration-none footer-link hover-primary">
                <i class="fas fa-file-contract me-1"></i>Terms of Service
              </a>
            </div>
          </div>
          <div class="col-lg-4 text-end text-center text-lg-end">
            <div class="made-with-love">
              <span class="text-white-50 footer-made-with">
                <i class="fas fa-laptop-code me-2 text-info"></i>
                Made with <i class="fas fa-heart text-danger heartbeat mx-1"></i> in
                <span class="text-warning fw-bold">Egypt</span>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
  <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
